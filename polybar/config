[module/xbacklight]
type = internal/backlight
card = amdgpu_bl0
use-actual-brightness = true
enable-scroll = true

format = <label> 
label = ÔÉ´ %percentage%%

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ‚îÄ
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ‚îÄ
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

; /sys/class/backlight to find the card
; sudo chmod a+rw /sys/class/backlight/amdgpu_bl0/brightness <- last resort to be able 
; to change the brightness. Probably also need to change the perms of other brightness 
; files too. Once a better way is found, can revert these perm changes w/ `sudo chmod a-rw`
[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = amdgpu_bl0

